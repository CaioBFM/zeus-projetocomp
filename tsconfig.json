{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-native"  // ✅ ESSA LINHA HABILITA JSX
  },
  "extends": "expo/tsconfig.base"  // ✅ Remover essa linha se der erro!
}
